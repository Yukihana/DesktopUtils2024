<Window x:Class="MPD.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPD.Windows"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainContextLogic, IsDesignTimeCreatable=True}"
        Background="#333" Foreground="#888"
        Title="PreW11 Darkpad" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu Background="#444" Foreground="#CCC">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding DefaultCommand}" CommandParameter="open" />
                <MenuItem Header="Save" Command="{Binding DefaultCommand}" CommandParameter="save_as" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Zoom in" Click="ZoomIn" />
                <MenuItem Header="Zoom out" Click="ZoomOut" />
                <MenuItem Header="Reset zoom" Click="ResetZoom" />
            </MenuItem>
        </Menu>
        <TextBox x:Name="TextContent"
                 Text="{Binding Text, Mode=TwoWay}"
                 Grid.Row="1"
                 BorderThickness="0"
                 Background="#222"
                 Foreground="#DDD"
                 FontSize="16"
                 FontFamily="Lucida Console"
                 AcceptsReturn="True"
                 AcceptsTab="True" />
    </Grid>
</Window>